  section(am-Example)
    pre: code
      span(am-Code='comment')= '<!-- Standard button -->\n'
      = '<a '
      span(am-Code='removed')= 'class="btn btn-default"'
      = ' '
      span(am-Code='added')= 'am-Button'
      = '>Default</a>\n'
      span(am-Code='comment')= '<!-- Provides extra visual weight and identifies the primary action in a set of buttons -->\n'
      = '<a '
      span(am-Code='removed')= 'class="btn btn-primary"'
      = ' '
      span(am-Code='added')= 'am-Button="primary"'
      = '>Primary</a>\n'
      span(am-Code='comment')= '<!-- Indicates a successful or positive action -->\n'
      = '<a '
      span(am-Code='removed')= 'class="btn btn-success"'
      = ' '
      span(am-Code='added')= 'am-Button="success"'
      = '>Success</a>\n'
      span(am-Code='comment')= '<!-- Contextual button for informational alert messages -->\n'
      = '<a '
      span(am-Code='removed')= 'class="btn btn-info"'
      = ' '
      span(am-Code='added')= 'am-Button="info"'
      = '>Info</a>\n'
      span(am-Code='comment')= '<!-- Indicates caution should be taken with this action -->\n'
      = '<a '
      span(am-Code='removed')= 'class="btn btn-warning"'
      = ' '
      span(am-Code='added')= 'am-Button="warning"'
      = '>Warning</a>\n'
      span(am-Code='comment')= '<!-- Indicates a dangerous or potentially negative action -->\n'
      = '<a '
      span(am-Code='removed')= 'class="btn btn-danger"'
      = ' '
      span(am-Code='added')= 'am-Button="danger"'
      = '>Danger</a>\n'
      span(am-Code='comment')= '<!-- Deemphasize a button by making it look like a link while maintaining button behavior -->\n'
      = '<a '
      span(am-Code='removed')= 'class="btn btn-link"'
      = ' '
      span(am-Code='added')= 'am-Button="link"'
      = '>Link</a>\n'
